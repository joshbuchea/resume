---
layout: base
templateClass: tmpl-resume
---

<div itemscope itemtype="http://schema.org/Person">

<header>
  <h1 itemprop="name">{{ name }}</h1>
  <p itemprop="jobTitle">{{ title }}</p>
</header>

<main>
  <section>
    <h2 class="hidden">Details</h2>

    {% if location %}
    <address itemprop="address">{{ location }}</address>
    {% endif %}

    {% if phone %}<div itemprop="telephone">{{ phone }}</div>{% endif %}
    {% if email %}
    <div><a href="mailto:{{ email }}" itemprop="email">{{ email }}</a></div>
    {% endif %}

    {% if website %}
    <div><a href="{{ website }}" itemprop="url">{{ website }}</a></div>
    {% endif %}

    {# social #}
    {% if social.twitter %}
    <div>
      <a href="https://twitter.com/{{ social.twitter }}" itemprop="sameAs">
        twitter.com/{{ social.twitter }}
      </a>
    </div>
    {% endif %}
    {% if social.github %}
    <div>
      <a href="https://github.com/{{ social.github }}" itemprop="sameAs">
        github.com/{{ social.github }}
      </a>
    </div>
    {% endif %}
    {% if social.linkedin %}
    <div>
      <a href="https://www.linkedin.com/in/{{ social.linkedin }}/" itemprop="sameAs">
        linkedin.com/in/{{ social.linkedin }}
      </a>
    </div>
    {% endif %}
  </section>

  {% if profile %}
  <section>
    <h2>Profile</h2>

    <div itemprop="description">
      {{ profile }}
    </div>
  </section>
  {% endif %}

  <section class="skills">
    <h2>Skills</h2>

    <ul>
      {% for skill in skills %}
      <li>{{ skill }}</li>
      {% endfor %}
    </ul>
  </section>

  <section>
    <h2>Experience</h2>

    {% for _experience in experience %}
    <div>
      <div>
        <strong itemprop="???" itemscope itemtype="http://schema.org/Organization">
          {{ _experience.title }} at
          <span itemprop="name">{{ _experience.company }}</span>
        </strong>
      </div>
      <time>
        {{ _experience.start_date }}
        {% if _experience.start_date and _experience.end_date %}–{% endif %}
        {{ _experience.end_date }}
      </time>

      {% if _experience.achievements %}
      <ul>
        {% for achievement in _experience.achievements %}
        <li>{{ achievement }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  <section>
    <h2>Education</h2>

    {% for _education in education %}
    <div>
      <div>
        <strong itemprop="alumniOf" itemscope itemtype="http://schema.org/EducationalOrganization">
          {{ _education.degree }} at
          <span itemprop="name">{{ _education.school }}</span>
        </strong>
      </div>
      <time>
        {{ _education.start_date }}
        {% if _education.start_date and _education.end_date %}–{% endif %}
        {{ _education.end_date }}
      </time>

      {% if _education.achievements %}
      <ul>
        {% for achievement in _education.achievements %}
        <li>{{ achievement }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  {# testimonials #}

  {% if references %}
  <section>
    <h2>References</h2>

    {{ references }}
  </section>
  {% endif %}
</main>

{# {{ content | safe }} #}

</div>
